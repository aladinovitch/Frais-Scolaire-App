@model Frais_Scolaire.ViewModel.EnseignantVM

@{
	ViewData["Title"] = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
	<h4>Enseignant</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Enseignant.Matricule)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Enseignant.Matricule)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Enseignant.Prenom)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Enseignant.Prenom)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Enseignant.Nom)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Enseignant.Nom)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Enseignant.Phone)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Enseignant.Phone)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Enseignant.Email)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Enseignant.Email)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Enseignant.Adresse)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Enseignant.Adresse)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Enseignant.Statut)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Enseignant.Statut)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Enseignant.Salaire)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Enseignant.Salaire)
		</dd>
	</dl>
	<hr />
	@foreach (var g in @Model.Groupes) {
		if (g.GroupeEleves.Any()) {
			<div class="alert alert-dismissible alert-info">
				<h4 class="alert-heading">Groupe @g.Nom, @g.AnneeEtude.Nom, @g.AnneeScolaire.Nom</h4>
			</div>
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">Matricule</th>
						<th scope="col">Nom</th>
						<th scope="col">Prénom</th>
						<th scope="col">Nom</th>
						<th scope="col">Naissance</th>
						<th scope="col">Sexe</th>
						<th scope="col">Phone</th>
						<th scope="col">Email</th>
						<th scope="col">Adresse</th>
					</tr>
				</thead>
				@foreach (var eleve in g.GroupeEleves) {
					<tbody>
						<tr>
							<td>@eleve.Matricule</td>
							<td>@eleve.Nom</td>
							<td>@eleve.Prenom</td>
							<td>@eleve.Nom</td>
							<td>@eleve.Naissance</td>
							<td>@eleve.Sexe</td>
							<td>@eleve.Phone</td>
							<td>@eleve.Email</td>
							<td>@eleve.Adresse</td>
						</tr>
					</tbody>
				}
			</table>
		}
	}
	<div>
		<a asp-action="Edit" asp-route-id="@Model?.Enseignant.Id">Edit</a> |
		<a asp-action="Index">Back to List</a>
	</div>
